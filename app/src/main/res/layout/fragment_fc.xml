<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.luisitura.dlymansura.rssgrants.fragment.FCPFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/education_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/colorFcp"
                android:text="Образование"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/sport_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorFcp"
                android:text="Физическая культура и спорт"
                android:textColor="#FFF"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/culture_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorFcp"
                android:text="Культура и туризм"
                android:textColor="#FFF"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/agro_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@color/colorFcp"
                android:text="Сельское хозяйство"
                android:textColor="#FFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/science_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorFcp"
                android:text="Наука и технологии"
                android:textColor="#FFF"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/economy_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorFcp"
                android:text="Инновационная экономика"
                android:textColor="#FFF"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/info_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorFcp"
                android:text="Информационное общество"
                android:textColor="#FFF"
                android:layout_marginRight="5dp" />

            <Button
                android:id="@+id/skfo_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorFcp"
                android:text="Развитие СКФО"
                android:textColor="#FFF"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
